/**index.wxss**/
.container{
  background: #f9f9fa;
  /* height: 100vh; */
  margin:0;
  padding:0;
  display: flex;
  flex-direction: column;
  padding-top: 20rpx;
}
.item{
  background-color: #fff;
  width: 100%;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
}
.top{
  display: flex;
  align-items: center;
  padding:20rpx 25rpx 0 25rpx;
}
.topItem1{
  width: 30rpx;
  height: 30rpx;
  background-color: red;
  border-radius: 50%;
  margin-right:10rpx;
}
.topItem2{
  width: 430rpx;
  font-size: 28rpx;
}
.topItem3{
  width: 237rpx;
  text-align: right;
  font-size: 28rpx;
  color:#84929c;
}
.mainItem{
  font-size: 30rpx;
  font-weight: bolder;
  padding:25rpx 25rpx;
}
.mainContent{
  font-size: 28rpx;
  color:#84929c;
  padding:0 25rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.bottom{
  display: flex;
  align-items: center;
  padding-left:25rpx;
  font-size: 28rpx;
  color:#84929c;
  margin-top:20rpx;
}
.bottomItem{
  margin-right:40rpx;
}